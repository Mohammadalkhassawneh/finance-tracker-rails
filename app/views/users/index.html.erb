<h1 class="text-center" mt-4>Users</h1>
<div class="flickr_pagination mb-4">
     <%= will_paginate @users, :container => false %>
</div>
<% @users.each do |user| %>
    <div class="card mb-3 text-center">
    <h5 class="card-header text-secondary">By <%= user.username  if user.username%></h5>
    <div class="card-body">
        <%= gravatar_for @user, size: 80 %>
        <h5 class="card-title text-success"><%= user.articles.count %> Articles</h5>
        <%= link_to 'Show', user_path(user), class: 'btn btn-outline-info' %><br /><br />
    </div>
    <div class="card-footer text-muted">
        <small><%= "joined #{time_ago_in_words(user.created_at)} ago" %></small>
    </div>
    </div>
<%end%>
<div class="flickr_pagination mb-4">
     <%= will_paginate @users, :container => false %>
</div>